//-----------------------------------------------------------------------------
//                         GLOBAL Defination
//-----------------------------------------------------------------------------
#ifdef USE_GL
	#version 120
#else
	#version 100
	precision mediump int;
	precision highp float;	
#endif
//-----------------------------------------------------------------------------
//                         GLOBAL PARAMETERS
//-----------------------------------------------------------------------------
uniform	mat4 worldviewproj_matrix;
//-----------------------------------------------------------------------------
//                         Vertex Inputs
//-----------------------------------------------------------------------------
//Inputs, can't ReName...
attribute vec4 position;
//-----------------------------------------------------------------------------
//                         Vertex Outputs
//-----------------------------------------------------------------------------
//Outputs
//the name need to be the same pixel input name.
varying vec4 oUvProjection;
//-----------------------------------------------------------------------------
//                         Utility Function
//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
// Function Name: main
// Function Desc: Vertex Program Entry point
//-----------------------------------------------------------------------------
void main()
{	
	gl_Position = worldviewproj_matrix*position;
	// Projective texture coordinates, adjust for mapping	 
	mat4 Scalemat = mat4(
		 0.5, 0.0, 0.0, 0.0, 
		 0.0,-0.5, 0.0, 0.0,
		 0.0, 0.0, 0.5, 0.0,
		 0.5, 0.5, 0.5, 1.0);
	oUvProjection = Scalemat*gl_Position;
}